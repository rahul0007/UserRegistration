<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp10">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewClose"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:tint="@color/lightBlack"
        android:src="@drawable/ic_colse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp5"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewClose" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="@dimen/dp90"
        android:layout_height="@dimen/dp90"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_basic_info" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewUserProfile"
        android:layout_width="@dimen/dp90"
        android:layout_height="@dimen/dp90"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_image"
        android:padding="2dp"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_basic_info" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_basic_info"
        style="@style/MyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        app:layout_goneMarginStart="5dp"
        android:layout_marginTop="@dimen/dp10"
        android:text="@string/basic_info"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewEmail"
        style="@style/MyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginTop="5dp"
        android:textSize="16sp"

        android:text="Rahul@gmail.com"
        android:textColor="@color/darkOrange"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewPhone"
        style="@style/MyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:text="7600461686"
        android:textSize="14sp"
        android:textColor="@color/lightBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewUserName"
        style="@style/MyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:maxLines="2"
        android:text="rahul Sondarva"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/appCompatImageView2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDesignation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"

        android:maxLines="2"
        android:layout_marginTop="@dimen/dp10"
        style="@style/MyTextView"
        android:textSize="14sp"
        android:textColor="@color/darkOrange"
        android:text="Software Enginers"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/textViewUserName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAddress"
        android:layout_width="0dp"
        style="@style/MyTextView"
        android:textSize="14sp"
        android:textColor="@color/lightBlack"
        android:layout_marginStart="@dimen/dp5"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="rahulSondarvaaaaa"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/textViewDesignation" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLandmark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/lightBlack"
        android:layout_marginStart="@dimen/dp5"

        android:text="Landmark"
        style="@style/MyTextView"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/textViewAddress" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:ellipsize="end"
        style="@style/MyTextView"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/lightBlack"
        android:layout_marginStart="@dimen/dp5"

        android:text="city State"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/textViewLandmark" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewPincode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/lightBlack"
        android:layout_marginStart="@dimen/dp5"

        android:text="pincode"
        style="@style/MyTextView"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/textViewCity" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <View
        android:id="@+id/view_education"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp18"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPincode" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewEducationInfo"
        style="@style/MyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginTop="@dimen/dp18"
        android:text="@string/edu_info"
        android:textSize="16sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_education" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewQualification"
        style="@style/MyTextView"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/lightBlack"

        android:text="Graduate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewEducationInfo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewPassingYear"
        style="@style/MyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:text="passing years-2017"
        android:textSize="14sp"
        android:textColor="@color/lightBlack"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewQualification" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewGrade"
        style="@style/MyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:maxLines="1"
        android:text="CGPA-9.25"
        android:textSize="14sp"
        android:textColor="@color/lightBlack"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewPassingYear" />

    <View
        android:id="@+id/view_prof_info"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp18"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGrade" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_prof_info"
        style="@style/MyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="@dimen/dp18"
        android:text="@string/prof_info"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_prof_info" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewExperience"
        style="@style/MyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/lightBlack"

        android:text="passing years-2017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_prof_info" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDomain"
        style="@style/MyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/lightBlack"

        android:text="Design Deparment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewExperience" />


</androidx.constraintlayout.widget.ConstraintLayout>
