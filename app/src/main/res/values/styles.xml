<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="editTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textAlignment">viewStart</item>
      <item name="android:padding">@dimen/dp12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/dp35</item>
        <item name="android:layout_marginEnd">@dimen/dp35</item>
        <item name="android:drawablePadding">@dimen/dp5</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="MyTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:layout_marginStart">@dimen/dp35</item>
        <item name="android:layout_marginEnd">@dimen/dp35</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>